<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:layout_margin="2dp"
    android:id="@+id/cardview1"
    android:layout_width="fill_parent"
    android:layout_height="190dp"

    card_view:cardCornerRadius="3dp">

    <RelativeLayout
        android:background="@color/cardColor"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:elevation="11dp"
            android:padding="10dp"
            android:src="@drawable/sun_image_alt"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/sunImage"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weatherText"
            android:layout_below="@+id/sunImage"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/sunriseText"
            android:layout_below="@+id/weatherText"
            android:layout_alignParentStart="true"
            android:paddingLeft="10dp" />

        <TextView

            android:textColor="#FFEB3B"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Sun"
            android:id="@+id/sunTextView"
            android:layout_alignBottom="@+id/sunImage"
            android:layout_alignParentStart="true" />

        <ImageView

            android:scaleType="centerCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/starsImageView"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/sky"
            android:layout_alignBottom="@+id/sunImage" />



    </RelativeLayout>

</android.support.v7.widget.CardView>