<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:layout_margin="2dp"
    android:id="@+id/cardview1"
    android:layout_width="fill_parent"
    android:layout_height="200dp"

    card_view:cardCornerRadius="2dp">

    <RelativeLayout

        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:padding="10dp"
            android:src="@drawable/sun_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/sunImage"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:textColor="#000000"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is the test Day View Class"
            android:id="@+id/textView"
            android:layout_below="@+id/sunImage"
            android:layout_alignParentStart="true" />

        <TextView
            android:textColor="#000000"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Sunrise to Sunset is soem time amiright?"
            android:id="@+id/sunriseText"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true" />

        <TextView
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Sun"
            android:id="@+id/textView4"
            android:layout_alignBottom="@+id/sunImage"
            android:layout_alignParentStart="true" />

        <ImageView
            android:scaleType="centerCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/sky"
            android:layout_alignBottom="@+id/sunImage" />

    </RelativeLayout>

</android.support.v7.widget.CardView>