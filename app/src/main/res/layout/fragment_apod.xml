<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:layout_margin="2dp"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    card_view:cardCornerRadius="3dp">

    <RelativeLayout
        android:background="@color/cardColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:elevation="11dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:id="@+id/apodimageview"

            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
             />
        <TextView
            android:textColor="#C7C7C7"

            android:paddingLeft="10dp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:text="NASA&apos;s Astronomy Picture of the Day"
            android:id="@+id/textView2"
            android:layout_below="@+id/apodimageview"
            android:layout_alignParentStart="true" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Details"
            android:layout_below="@id/textView2"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:id="@+id/apoddetailbutton"
            android:layout_alignParentStart="true" />
        <TextView
            android:padding="5dp"
            android:text="APOD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/apodimageview"
            android:layout_alignParentStart="true"
            android:textColor="#FFEB3B"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:id="@+id/apodlable" />


    </RelativeLayout>

</android.support.v7.widget.CardView>